<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>
            <%= post.title %>
      </title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
      <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<body>
      <div class="container">
            <h2 class="mt-4">Post Details</h2>
            <div class="card mt-4">
                  <div class="card-header">
                        <b>Title:</b>
                        <%= post.title %>
                  </div>
                  <div class="card-body">
                        <b>Description:</b>
                        <p class="card-text">
                              <%= post.body %>
                        </p>
                  </div>
            </div>
            <h2 class="mt-4">Add a comment</h2>
            <form action="/comments/<%= post._id %>" method="POST">
                  <div class="form-group">
                        <textarea class="form-control" id="body" placeholder="Start writing your comment.." name="body" rows="1" required></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>
            <ul class="list-group mt-4" id="commentsList">
                  <h2>Comments</h2>
                  <% comments.forEach(function(comment) { %>
                        <li class="list-group-item">
                              <%= comment.body %>
                        </li>
                        <% }); %>
            </ul>
      </div>
</body>

</html>